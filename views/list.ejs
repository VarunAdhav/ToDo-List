<%- include("header") %>

    <body>
        <div class="box" id="heading">
            <h1>Day is</h1>
            <h1>
                <%= day %>
            </h1>
        </div>
        <div class="box">
            <% for(var i=0;i<items.length;i++){%>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%= items[i] %>
                </p>
            </div>
            <% } %>
            <form class="item" action="/" method="post">
                <input type="text" name="task" placeholder="New Task" autocomplete="off">
                <button type="submit">+</button>
            </form>
        </div>
        </body>
        <br>
        <%- include("footer") %>
        
    </html>